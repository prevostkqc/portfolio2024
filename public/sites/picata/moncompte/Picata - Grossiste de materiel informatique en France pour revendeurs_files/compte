function afficherModalCreationTicket(n,t,i,r){tycketTypeId=parseInt(n);messageDemande.html("");messageRetourEnvoi.hide();boutonValider.show();switch(n){case 1:titreModal.html("Rétractation commande n°"+t);messageDemande.attr("placeholder","Précisez ici les références des produits concernés. Afin que votre demande soit acceptée, assurez-vous que vos produits sont en parfait état, non ouvert, accompagnés de tous les accessoires. Tout produit retourné fera l'objet d'un avoir.");break;case 4:titreModal.html("Vous avez un article manquant");messageDemande.attr("placeholder","Précisez ici les références des produits concernés et les quantités manquantes. Indiquez également si vous avez émis des réserves auprès du transporteur à réception de votre commande.");break;case 5:titreModal.html("Vous avez un article endommagé ou défectueux");messageDemande.attr("placeholder","Précisez ici les références des produits concernés. Afin que votre demande soit prise en charge dans les meilleurs délais, précisez également la panne rencontrée ainsi que les numéros de série des produits.");break;case 8:titreModal.html("Litige transporteur avec votre commande n°"+t);messageDemande.attr("placeholder","Précisez ici les références des produits concernés et les problèmes rencontrés. Indiquez également si vous avez émis des réserves auprès du transporteur à réception de votre commande. Si votre colis est arrivé abimé, n'hésitez pas à joindre dans votre ticket des photos.")}inputTicketTypeId.val(n);inputTicketCommandeId.val(t);inputTicketFactureId.val(i);inputTicketProduitId.val(r);$("#messageDemande").val();$("#modalCreationTicket").show()}function envoyerTicket(n){if(messageDemandeErreur.hide(),messageDemande.val().length<2){messageDemandeErreur.html("Le message est trop court.");messageDemandeErreur.show();return}boutonValider.hide();messageDemande.hide();JSViews.Account.PostTicket(n,"formModalCreationTicket")}$(function(){$(".afficherModalDetails").on("click",function(){let n=$(this).attr("data-id");$("#modalDetails-"+n).show()});$(".afficherDetails").on("click",function(){let n=$(this).attr("data-id"),t=$("#afficherDetails-"+n);t.toggleClass("pic_voir-plus-options--visible")})});let titreModal=$("#modalCreationTicket #titreModalDemande"),messageDemande=$("#modalCreationTicket #Message"),boutonValider=$("#modalCreationTicket #boutonEnvoyerTicket"),messageRetourEnvoi=$("#modalCreationTicket #messageRetourEnvoi"),messageDemandeErreur=$("#modalCreationTicket #messageDemandeErreur"),inputTicketFactureId=$("#modalCreationTicket #FactureId"),inputTicketCommandeId=$("#modalCreationTicket #CommandeId"),inputTicketProduitId=$("#modalCreationTicket #ProduitId"),inputTicketTypeId=$("#modalCreationTicket #TicketTypeId")