let selectGamme='select[name*="filtre-gamme"]';let selectCarteGraphique='select[name*="filtre-gpu"]';let selectProcesseur='select[name="filtre-processeur"]';let selectRAM='select[name*="filtre-ram"]';let selectSSD='select[name*="filtre-ssd"]';let inputPromo='input[name*="filtre-promo"]';let articleLePc='article.le-pc';let buttonReinitialiserFiltres='button#reinitialiser-filtres';let buttonReinitialiserFiltresDuplicat='button#reinitialiser-filtres--duplicat';let divAucunResultat='div#aucun-resultat';$(function(){$('.slider-for').slick({dots:true,infinite:true,speed:300,slidesToShow:1,autoplay:true,adaptiveHeight:true});$(selectGamme).on('change',majListePC);$(selectCarteGraphique).on('change',majListePC);$(selectProcesseur).on('change',majListePC);$(selectRAM).on('change',majListePC);$(selectSSD).on('change',majListePC);$(inputPromo).on('change',majListePC);$(buttonReinitialiserFiltres).on('click',reinitialiserFiltres);$(buttonReinitialiserFiltresDuplicat).on('click',reinitialiserFiltres);});function majListePC(){$(articleLePc).show();$(divAucunResultat).hide();let valeurGamme=$(selectGamme).find(':selected').val();let valeurCarteGraphique=$(selectCarteGraphique).find(':selected').val();let valeurProcesseur=$(selectProcesseur).find(':selected').val();let valeurRAM=$(selectRAM).find(':selected').val();let valeurSSD=$(selectSSD).find(':selected').val();let valeurPromo=$(inputPromo).is(':checked');if(valeurGamme!==undefined&&valeurGamme!=='-1'){$(articleLePc+':not([data-filtre-gamme='+valeurGamme+'])').hide();}
if(valeurCarteGraphique!==undefined&&valeurCarteGraphique!=='-1'){$(articleLePc+':not([data-filtre-gpu='+valeurCarteGraphique+'])').hide();}
if(valeurProcesseur!==undefined&&valeurProcesseur!=='-1'){$(articleLePc+':not([data-filtre-proc='+valeurProcesseur+'])').hide();}
if(valeurRAM!==undefined&&valeurRAM!=='-1'){$(articleLePc+':not([data-filtre-ram='+valeurRAM+'])').hide();}
if(valeurSSD!==undefined&&valeurSSD!=='-1'){$(articleLePc+':not([data-filtre-ssd='+valeurSSD+'])').hide();}
if(valeurPromo){$(articleLePc+':not([data-filtre-promo=1])').hide();}
if($(articleLePc+':visible').length==0){$(divAucunResultat).show();}}
function reinitialiserFiltres(){$(selectGamme).val('-1');$(selectCarteGraphique).val('-1');$(selectProcesseur).val('-1');$(selectRAM).val('-1');$(selectSSD).val('-1');$(inputPromo).prop('checked',false);majListePC();$(selectGamme).css({'background':'#ffffff00','border':'1px solid #ffcf00'});$(selectCarteGraphique).css({'background':'#ffffff00','border':'1px solid #ffcf00'});$(selectProcesseur).css({'background':'#ffffff00','border':'1px solid #ffcf00'});$(selectRAM).css({'background':'#ffffff00','border':'1px solid #ffcf00'});$(selectSSD).css({'background':'#ffffff00','border':'1px solid #ffcf00'});}